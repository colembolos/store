<div class="products-container">
  <h1>Products</h1>
  <%= link_to 'New Product', new_admin_product_path, class: 'new-product-link' %>

  <table class="products-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price_value, unit: 'â‚¬') %></td>
          <td>
            <%= link_to 'Show', admin_product_path(product), class: 'show-link' %>
            <%= link_to 'Edit', edit_admin_product_path(product), class: 'show-link' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
