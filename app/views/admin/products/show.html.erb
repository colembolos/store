<div class="product-show-container">
  <div class="product-details">
    <p><strong>Name:</strong> <%= @product.name %></p>
    <p><strong>Code:</strong> <%= @product.code %></p>
    <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
  </div>

  <%= link_to 'Back to Products', admin_products_path, class: 'back-link' %>
  <%= button_to "Destroy this product", admin_product_path(@product), method: :delete, class: 'destroy-product-link' %>
</div>
