<div class="products-container">
  <h1>My Cart</h1>

  <table class="products-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Amount</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan="2">Total</th>
        <th><%= number_to_currency(@total / 100.0, unit: '€') %></th>
      </tr>
    </tfoot>
    <tbody>
      <% @basket.basket_items.each do |item| %>
        <% @total += item.product.price %>
        <tr>
          <td><%= item.product.code %></td>
          <td><%= item.amount %></td>
          <td><%= number_to_currency(item.price_value, unit: '€') %></td>
          <td>
            <%= form_with(url: basket_item_path(item), method: :delete) do |form| %>
              <%= form.number_field :amount, value: 1, min: 1, max: item.amount %>
              <%= form.submit "Remove" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
