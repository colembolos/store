<div class="products-container">
  <h1>My Cart</h1>

  <table class="products-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Amount</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @basket.basket_items.each do |item| %>
        <tr>
          <td><%= item.product.code %></td>
          <td><%= item.amount %></td>
          <td><%= number_to_currency(item.price_value, unit: 'â‚¬') %></td>
          <td>
            <%= form_with(url: basket_item_path(item), method: :delete) do |form| %>
              <%= form.number_field :amount, value: 1, min: 1, max: item.amount %>
              <%= form.submit "Remove" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
