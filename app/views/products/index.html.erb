<div class="products-container">
  <h1>Products</h1>

  <table class="products-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price_value) %></td>
          <td>
            <%= link_to 'Add to Cart', products_path, class: 'show-link' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
