<div class="products-container">
  <h1>Products</h1>

  <table class="products-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price_value, unit: 'â‚¬') %></td>
          <td>
            <%= form_with(url: basket_items_path, method: :post) do |form| %>
              <%= form.hidden_field :product_id, value: product.id %>
              <%= form.number_field :amount, in: 1..99, step: 1 %>
              <%= form.submit "Add to Cart" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
